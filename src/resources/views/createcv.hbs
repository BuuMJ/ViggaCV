<link href='https://fonts.googleapis.com/css?family=Lato:400,300,700' rel='stylesheet' type='text/css'>
{{#if user}}
<form method="POST" action="/cv/exportcv">
<div class="container-create-cv">
  <div class="header-create-cv">
    <div class="full-name-create-cv">
      <input type="text" name="fullnamecv" id="fullname-cv" value="{{getFullname user}}">
      <img src="{{getAvatar user}}" alt="">
    </div>
    <div class="contact-info-create-cv">
        <div class="list-contact-info">
            <label for="email-cv">Email:</label>
            <input id="email-cv" name="emailcv" value="{{getEmail user}}">
        </div>
        <div class="list-contact-info">
            <label class="phone-cv" for="phone-cv">Phone: </label>
            <input id="phone-cv" name="phonecv" value="{{getPhone user}}">
        </div>
    </div>
    
    <div class="about-create-cv">
      <span class="position">Overview:</span>
      <textarea id="desc-overview" class="desc" name="overview" placeholder="I am a front-end developer with more than 3 years of experience writing html, css, and js. I'm motivated, result-focused and seeking a successful team-oriented company with opportunity to grow."></textarea>
    </div>
  </div>
   <div class="details">
    <div class="section">
      <div class="section__title">Experience</div>
      <div class="section__list">
        <div class="section__list-item">
          <div class="left">
            <input class="name-company" name="namecompany" placeholder="Thien Phu Company">
            <input class="addr-company" name="addrcompany" placeholder="Le Hong Phong, Nha Trang">
            <input class="duration-company" name="durationcompany" placeholder="4 years">
          </div>
          <div class="right">
            <input class="name-profession" name="nameprofession" placeholder="Front-end Developer">
            <input class="desc-profession" name="descprofession" placeholder="Develop a website for company">
          </div>
        </div>
      </div>
    </div>
    <div class="section">
      <div class="section__title">Education</div>
       <div class="section__list">
        <div class="section__list-item">
          <div class="left">
            <input class="name-school" name="nameschool" placeholder="Greenwich University">
            <input class="addr-school" name="addrschool" placeholder="20 Cong Hoa">
            <input class="duration-school" name="durationschool" placeholder="Sep 2017 - Nov 2023">
          </div>
          <div class="right">
            <input class="name-profession" name="nameprofessionschool" placeholder="Front-end Developer">
            <input class="desc-profession" name="descprofessionschool" placeholder="Web Development">
          </div>
        </div>
      </div>
      
  </div>
     <div class="section">
      <div class="section__title">Projects</div> 
       <div class="section__list">
         <div class="section__list-item project">
           <textarea id="name-project" name="nameproject" placeholder="Your Name Project"></textarea>
           <textarea id="desc-project" name="descproject" placeholder="I am a front-end developer with more than 3 years of experience writing html, css, and js. I'm motivated, result-focused and seeking a successful team-oriented company with opportunity to grow."></textarea>
         </div>
       </div>
    </div>
     <div class="section">
       <div class="section__title">Skills</div>
       <div class="skills">
         <div class="skills__item">
           <div class="left"><input class="nameskill" value="{{getSkills user}}"></div>
           <div class="right">
                          <input  id="ck1" name="skilllv1" type="checkbox" checked/>

             <label for="ck1"></label>
                          <input id="ck2" name="skilllv2" type="checkbox" checked/>

              <label for="ck2"></label>
                         <input id="ck3" name="skilllv3" type="checkbox" />

              <label for="ck3"></label>
                           <input id="ck4" name="skilllv4" type="checkbox" />
            <label for="ck4"></label>
                          <input id="ck5" name="skilllv5" type="checkbox" />
              <label for="ck5"></label>
           </div>
         </div>
       </div>
       </div>
     <div class="section">
     <div class="section__title section__acti">
       Activities
       </div>
       <div class="section__list">
         <textarea id="activities" name="activities" placeholder="Football, programming, swimming."></textarea>
       </div>
     </div>
     </div>
  </div>
    <button type="submit">Review Your CV</button>
    </form>
{{/if}}
