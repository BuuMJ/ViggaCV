             <label for="ck1"></label>
                          <input id="ck2" name="skilllv2" type="checkbox" checked/>

              <label for="ck2"></label>
                         <input id="ck3" name="skilllv3" type="checkbox" />

              <label for="ck3"></label>
                           <input id="ck4" name="skilllv4" type="checkbox" />
            <label for="ck4"></label>
                          <input id="ck5" name="skilllv5" type="checkbox" />
              <label for="ck5"></label>
