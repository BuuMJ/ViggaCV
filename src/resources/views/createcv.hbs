            <input class="name-company" name="namecompany" placeholder="Thien Phu Company">
            <input class="addr-company" name="addrcompany" placeholder="Le Hong Phong, Nha Trang">
            <input class="duration-company" name="durationcompany" placeholder="4 years">
          </div>
          <div class="right">
            <input class="name-profession" name="nameprofession" placeholder="Front-end Developer">
            <input class="desc-profession" name="descprofession" placeholder="Develop a website for company">
          </div>
        </div>
      </div>
    </div>
    <div class="section">
      <div class="section__title">Education</div>
       <div class="section__list">
        <div class="section__list-item">
          <div class="left">
            <input class="name-school" name="nameschool" placeholder="Greenwich University">
            <input class="addr-school" name="addrschool" placeholder="20 Cong Hoa">
            <input class="duration-school" name="durationschool" placeholder="Sep 2017 - Nov 2023">
          </div>
          <div class="right">
            <input class="name-profession" name="nameprofessionschool" placeholder="Front-end Developer">
            <input class="desc-profession" name="descprofessionschool" placeholder="Web Development">
