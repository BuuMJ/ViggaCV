          <input type="text" value="{{getFullname user}}">
          <input type="text" value="{{getSpecialized user}}">
        </div>
        <div class="body__infor-user">
          <input type="text" name="" id="" value="{{getBirthday user}}">
          <input type="text" value="{{getAddress user}}">
          <input type="text" value="{{getPhone user}}">
        </div>
      </div>
    </div>
  </div>
    <button type="submit">Review Your CV</button>
    </form>
