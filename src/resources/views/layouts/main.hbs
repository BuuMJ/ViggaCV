<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/img/LOGOVGA-icon.png"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Noto+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Roboto:ital,wght@0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=Source+Sans+3:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/css/app.css">
    <title>{{title}}</title>
</head>
<body>
    <div class="app">
      <div class="header-app">
        {{> header}}
      </div>
        {{{body}}}
      <div class="footer-app">
        {{> footer}}
      </div>
    </div>
</body>
<script>
      function moveToTop() {
  var moveTopBtn = document.getElementById("moveTopBtn");
  var moveTop = document.getElementById("toTop");
  moveTopBtn.addEventListener("click", function() {
    moveTop.scrollIntoView();
  });
}
moveToTop();
document.body.onscroll = function() {scrollContent()};
function scrollContent() {
if (document.body.scrollTop > 60 || document.documentElement.scrollTop > 60) {
document.getElementById('moveTopBtn').style.cssText = "opacity: 1; transition: .5s;";
document.querySelector('.header-cv').style.cssText = "transform: translatey(0);";
document.querySelector('.free-design').style.cssText = "transform: translatex(0);";
document.querySelector('.animation-roll').style.display = 'none';
} else {
document.getElementById('moveTopBtn').style.cssText = "opacity: 0; transition: .5s;";
document.querySelector('.header-cv').style.cssText = "transform: translatey(70%);";
if (window.innerWidth >= 322 && window.innerWidth <= 768) {
    document.querySelector('.header-cv').style.cssText = "transform: translatey(50%);";
  }
if(window.innerWidth <= 321){
   document.querySelector('.header-cv').style.cssText = "transform: translatey(30%);";
}
document.querySelector('.free-design').style.cssText = "transform: translatex(400%);";
document.querySelector('.animation-roll').style.display = 'flex';
}
if (document.body.scrollTop > 450 || document.documentElement.scrollTop > 450) {
document.querySelector('.easy-operation').style.cssText = "transform: translateX(0);";
} else {
document.querySelector('.easy-operation').style.cssText = "transform: translateX(-200%);";
}
if (document.body.scrollTop > 930 || document.documentElement.scrollTop > 930) {
document.querySelector('.download-cv').style.cssText = "transform: translateX(0);";
} else {
document.querySelector('.download-cv').style.cssText = "transform: translateX(400%);";
}
if (document.body.scrollTop > 1350 || document.documentElement.scrollTop > 1350) {
document.querySelector('.interview-cv').style.cssText = "transform: translateX(0);";
} else {
document.querySelector('.interview-cv').style.cssText = "transform: translateX(-200%);";
}
if (document.body.scrollTop > 1900 || document.documentElement.scrollTop > 1900) {
document.querySelector('.stepbystep-cv').style.cssText = "transform: translateX(0);";
} else {
document.querySelector('.stepbystep-cv').style.cssText = "transform: translateX(400%);";
}
}
var resetLocalStorage = document.querySelector('.reset-localstorage');
var resetLocalStorageCompany = document.querySelector('.reset-localstorage__company');
var resetLocalStorageAdmin = document.querySelector('.reset-localstorage__admin');
if (resetLocalStorage) {
  resetLocalStorage.addEventListener('click', function() {
    localStorage.setItem('currentPageJob', 1);
  });
}
if (resetLocalStorageCompany) {
  resetLocalStorageCompany.addEventListener('click',function(){
    localStorage.setItem('currentPageCompany', 1)
  });
}
if (resetLocalStorageAdmin) {
  resetLocalStorageAdmin.addEventListener('click', function(){
    localStorage.setItem('currentPageUserAdmin', 1);
    localStorage.setItem('currentPageJobAdmin', 1);
  });
}
document.addEventListener("DOMContentLoaded", function() {
    let currentHref = window.location.pathname;
    if (currentHref === '/' || currentHref === '') {
        let footerApp = document.querySelector('.footer-app');
        footerApp.style.display = 'none';
        document.querySelector('.navbar').style.cssText = 'position: fixed; top: 0; z-index: 20;';
        document.querySelector('.navbar-responsive').style.cssText = 'position: fixed; top: 0; z-index: 20;';
    }
    var images = document.querySelectorAll('img');
    images.forEach(function(img) {
        img.onerror = function() {
            this.src = '/img/notfoundavatar.jpeg';
        };
    });
});
// show message
var alertMessage = document.querySelector('.alert-message');
var hideMessage = document.querySelector('.hide-message');
if(alertMessage){
setTimeout(function(){
    alertMessage.style.cssText = 'top: 12%';
    if(window.innerWidth <= 321){
        alertMessage.style.cssText = 'top: 15%';
    }
}, 100);
hideMessage.addEventListener('click',()=>{
    alertMessage.style.display = 'none';
});
var checkMessageSuccess = window.location.search;
if(checkMessageSuccess === '?message=Update%20user%20successful'){
    alertMessage.classList.add('alert-success');
}
}
</script>
</html>