<script>
    function logout() {
    document.cookie = 'token =; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
        localStorage.setItem('showSignIn', 'show');
        localStorage.setItem('showSignUp', 'hide');
        localStorage.setItem('showForgot', 'hide');
    window.location.href = "/login"
  }
  document.addEventListener("DOMContentLoaded", function() {
    var checkShowMenu = document.querySelector('.show-menu input#menu');
  function updateMenu(){
    if (checkShowMenu.checked) {
    document.querySelector('.responsive__navbar-center').style.transform = 'translateX(0)';
    document.querySelector('body').classList.add('modal-open');
    setTimeout(function(){
        document.querySelector('.overflow-header').style.display = 'block';
    },200);
    }
    else{
    document.querySelector('.responsive__navbar-center').style.transform = 'translateX(200%)';
    document.querySelector('.overflow-header').style.display = 'none';
    document.querySelector('body').classList.remove('modal-open');
    }
    };
    checkShowMenu.addEventListener('change',()=>{
        updateMenu();
    })
    document.querySelector('.overflow-header').addEventListener('click',()=>{
        checkShowMenu.checked = false;
        document.querySelector('.overflow-header').style.display = 'none';
        document.querySelector('.responsive__navbar-center').style.transform = 'translateX(200%)';
        document.querySelector('body').classList.remove('modal-open');
    })
    var clickedShowTools = false;
    var clickShowTools = document.querySelector('.drop-down__tools-responsive');
    var textShowTools = document.querySelector('.drop-down__tools-responsive span');
    var showTools = document.querySelector('.responsive__navbar-center .down__tools-responsive');
    if(clickShowTools){
    clickShowTools.addEventListener('click', function() {
        if (!clickedShowTools) {
            clickedShowTools = true;
            showTools.style.display = 'block';
            textShowTools.innerHTML = '<span class="material-symbols-outlined">handyman</span> Tools <i class="bi bi-caret-up-fill"></i>';
        } else {
            clickedShowTools = false;
            showTools.style.display = 'none';
            textShowTools.innerHTML = '<span class="material-symbols-outlined">handyman</span> Tools <i class="bi bi-caret-down-fill"></i>';
        }
    });
    }
    var removeLocalStorageLogin = document.querySelector('.removeLocalstorage');
    if(removeLocalStorageLogin){
    removeLocalStorageLogin.addEventListener('click',()=>{
        localStorage.setItem('showSignIn', 'show');
        localStorage.setItem('showSignUp', 'hide');
        localStorage.setItem('showForgot', 'hide');
    })
    }
    const removeLocalstorageResponsive = document.querySelector('.removeLocalstorageResponsive')
    if(removeLocalstorageResponsive){
        removeLocalstorageResponsive.addEventListener('click',()=>{
            localStorage.setItem('showSignIn', 'show');
            localStorage.setItem('showSignUp', 'hide');
            localStorage.setItem('showForgot', 'hide');
        })
    }
});
</script>