  var fontSmall = document.querySelector('#small');
  var fontMedium = document.querySelector('#medium');
  var fontBig = document.querySelector('#big');
  function changeFontSize() {
    let containerCV = document.querySelector('.body__user-cv');
    let childrenElements = containerCV.querySelectorAll('*');
    let fontSize = '16px';
    if (fontSmall.checked) {
      fontSize = '16px';
    } else if (fontMedium.checked) {
      fontSize = '16.5px';
    } else if (fontBig.checked) {
      fontSize = '17px';
    }
    childrenElements.forEach(element => {
      element.style.cssText = `font-size: ${fontSize}`;
    });
  }
  fontSmall.addEventListener('change', changeFontSize);
  fontMedium.addEventListener('change', changeFontSize);
  fontBig.addEventListener('change', changeFontSize);
