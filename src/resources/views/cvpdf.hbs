      skillText.style.cssText = `color: ${color}`;
      projectText.style.cssText = `color: ${color}`;
    })
  })
  function getFontSize(){
    const containerCVFontSize = document.querySelector('.body__user-cv');
    const childElements = containerCVFontSize.querySelectorAll('*');
    const dataFontSize = document.querySelector('.body__create-cv');
    const fontSize = dataFontSize.getAttribute('data-font-size');
