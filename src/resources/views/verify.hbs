<form class="box-forgot" method="POST" action="/register/apiregister">
        <div class="text-login">
            <span class="text-sign-in">Reset Password</span>
        </div>
        <div class="login-email">
            <input type="text" name="email" id="email-forgot" required>
            <label class="label-email" for="password">Email</label>
        </div>
        <div class="action-login">
            <button class="btn-signup back-reset" type="button">Back</button>
            <button class="btn-reset" type="submit">Reset Password</button>
        </div>
    </form>